<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="5dp"
    card:cardElevation="5dp"
    card:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <ImageView
            android:id="@+id/imgIndicator"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_success" />

        <ImageView
            android:id="@+id/btnVisit"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_open_browser" />

        <LinearLayout
            android:id="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnVisit"
            android:layout_toEndOf="@id/imgIndicator"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtWebSite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black"
                tools:text="Title" />

            <TextView
                android:id="@+id/txtUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="www.manimaran96.com" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Status : 200   Hit Time : 20secs\nLast Update : 23-Aug-2020 12.30 am" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/layoutContent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnEdit"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:drawableStart="@drawable/ic_edit"
                android:text="Edit"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:textSize="@dimen/text_small"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/btnDelete"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:drawableStart="@drawable/ic_delete"
                android:text="Delete"
                android:padding="5dp"
                android:layout_gravity="center"
                android:drawablePadding="5dp"
                android:textSize="@dimen/text_small"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>